<div class="d-flex" id="wrapper">

  <!-- Sidebar -->
  <div class="bg-light border-right" id="sidebar-wrapper">
    <h1 class="sidebar-heading" style="color: #315691;">
      <img src="/images/logo.png" alt="logo">
      Records
    </h1>

    <div class="list-group list-group-flush sidebar">
      <a href="" class="list-group-item list-group-item-action bg-light dash">Dashboard</a>
      <a href="" class="list-group-item list-group-item-action bg-light find">Search Records</a>
      <a href="" class="list-group-item list-group-item-action bg-light add">
        Add Transaction</a>
    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">

    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
      {{!-- <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button> --}}

      <h5 class="mt-4" id="section-heading">Dashboard</h5>

      {{!-- hamburger icon --}}
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
          {{!-- <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li> --}}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img src="/images/avatar.png" alt="avatar">
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid" id="dash">
      <br>

    </div>

    <div class="container-fluid" id="find" style="display: none;">
      <br>
      <nav class="navbar navbar-light bg-light">
        {{!-- <a class="navbar-brand"></a> --}}
        <form class="form-inline" method="POST", action="/find">
          <input class="form-control mr-sm-2" type="search" placeholder="Plot Number" required name="query">
          <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
        </form>
      </nav>

      <div class='search-results'>
        <div class='error'>
          <h2 ><span class="badge badge-danger">{{error}}</span></h2>
        </div>

        <table>
          <tr>

            {{!-- wrong: Test with more than 1 record --}}
            {{#each records}}
              <th>{{@key}}</th>
            {{/each}}
          </tr>
          <tr>
            {{#each records}}
              <td>{{this}}</td>
            {{/each}}
          </tr>
        </table>
      </div>
    </div>

    <div class="container-fluid" id="add" style="display: none;">
      <form method="POST" action="/add">
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="plot_num">Plot Number</label>
            <input type="text" class="form-control" id="plot_num" name="p_num" required>
          </div>
        </div>
        <hr>
        <div class="form-row">
          <div class="form-group col-md-4">
            <label for="size">Size (Acres)</label>
            <input type="number" class="form-control" id="size" placeholder="e.g 0.125 for 1/8 of an acre" required min="0" step="0.01" name="size">
          </div>
          <div class="form-group col-md-4">
            <label for="county">County</label>
            <select id="county" class="form-control" required name="county">
              <option value='' selected>Choose...</option>
              <option value="Nairobi">Nairobi</option>
              <option value="Kiambu">Kiambu</option>
              <option value="Nyeri">Nyeri</option>
            </select>
          </div>
          <div class="form-group col-md-4">
            <label for="location">Location</label>
            <select id="location" class="form-control" required name="location">
              <option value='' selected>Choose...</option>
            </select>
          </div>
        </div>
        <hr>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="buyer-name">Buyer's Name</label>
            <input type="text" class="form-control" id="buyer-name" required name="b_name">
          </div>
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-2">
            <label for="buyer-id">Buyer's ID Number</label>
            <input type="number" class="form-control" id="buyer-id" required name="b_id">
          </div>
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-3">
            <label for="buyer-tel">Buyer's Tel. Number</label>
            <input type="number" class="form-control" id="buyer-tel" required name="b_tel">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="seller-name">Seller's Name</label>
            <input type="text" class="form-control" id="seller-name" required name="s_name">
          </div>
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-2">
            <label for="seller-id">Seller's ID Number</label>
            <input type="number" class="form-control" id="seller-id" required name="s_id">
          </div>
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-3">
            <label for="seller-tel">Seller's Tel. Number</label>
            <input type="number" class="form-control" id="seller-tel" required name="s_tel">
          </div>
        </div>
        <hr>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="value">Sale Value</label>
            <input type="number" class="form-control" id="value" required name="sale_val">
          </div>

          <div class="form-group col-md-2"></div>

          <div class="form-group col-md-3">
            <label for="trans-cost">Transaction Cost</label>
            <input type="number" class="form-control" id="trans-cost" required name="trans_cost">
          </div>
        </div>
        <hr>
        <button type="submit" class="btn btn-primary">Post Transaction
        </button>
      </form>
    </div>
  </div>
  <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->
